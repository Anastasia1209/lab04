<div>
    <form action="/update" method="POST">

        <div class="Menu">
            <input type="hidden" name="id" value="{{user.id}}">
            <input id="inpName" value="{{user.name}}" name="name" type="name" onchange="DeleteID()" onclick="DeleteID()" placeholder="Имя" >
            <input id ='inpName2' value="{{user.number}}" name="number" type="number" onchange="DeleteID2()" onclick="DeleteID2()" placeholder="Номер" >
       </div>

        <div class="Menu">
            <button id="BTNsubm" type="Submit" >Изменить</button>
            <button id ='delBTN' type="button"  onclick="deleteUser('{{user.id}}')">Удалить</button>
            <button type="button" onclick="{{exit}}">Отказаться</button>
        </div>

    </form>
</div>
<script>
    let name = null;
    let number = null;
    function deleteUser(userId) {
        // Используем fetch для отправки запроса на удаление
        fetch(`/delete/${userId}`, {
            method: 'DELETE'
        })
        .then(response => response.json())
        .then(data => {
            window.location='/'
            console.log(data);
        })
        .catch(error => {
            window.location='/'
            console.error('Error:', error);
        });
    }
    function DeleteID(){
        if(name == null)
            name =  document.getElementById('inpName').value;
        if(document.getElementById('inpName').value != name)
            document.getElementById('delBTN').disabled = true;
        if(document.getElementById('inpName').value == name)
            document.getElementById('delBTN').disabled = false;
    }
    function DeleteID2(){
        if(number == null)
            number =  document.getElementById('inpName2').value;
        if(document.getElementById('inpName2').value != number)
            document.getElementById('delBTN').disabled = true;
        if(document.getElementById('inpName2').value == number)
            document.getElementById('delBTN').disabled = false;
    }


</script>
